{
  "dockerhub": "ssciwr/ocrd_paddleocr",
  "git_url": "https://github.com/ssciwr/ocrd_paddleocr",
  "tools": {
    "ocrd-paddleocr-segment": {
      "categories": [
        "Layout analysis"
      ],
      "description": "Layout segmentation with PaddleOCR",
      "executable": "ocrd-paddleocr-segment",
      "input_file_grp_cardinality": 1,
      "output_file_grp_cardinality": 1,
      "parameters": {
        "layout_merge_bboxes_mode": {
          "default": "union",
          "description": "Merge mode for model output bounding boxes (see https://www.paddleocr.ai/latest/en/version3.x/module_usage/layout_detection.html#iii-quick-integration)",
          "enum": [
            "large",
            "small",
            "union"
          ],
          "type": "string"
        },
        "layout_nms": {
          "default": true,
          "description": "Whether to use NMS post-processing to filter overlapping boxes.",
          "type": "boolean"
        },
        "threshold": {
          "default": 50.0,
          "description": "Confidence threshold when to consider a detected region.",
          "format": "float",
          "maximum": 100,
          "minimum": 0,
          "type": "number"
        }
      },
      "resources": [
        {
          "description": "PaddleOCR Document Layout Detection model (PP-DocLayout_plus-L)",
          "name": "PP-DocLayout_plus-L",
          "parameter_usage": "without-extension",
          "size": 130396160,
          "url": "https://paddle-model-ecology.bj.bcebos.com/paddlex/official_inference_model/paddle3.0.0/PP-DocLayout_plus-L_infer.tar"
        }
      ],
      "steps": [
        "layout/segmentation/region"
      ]
    }
  },
  "version": "0.0.1"
}
